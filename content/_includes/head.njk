<meta charset="utf-8">
<title>{% if title %} {{ title }} | {% endif %}{{ siteconfig.title }}</title>
<script>
  // Standard: Dark, au√üer der User hat "light" gespeichert.
  (function initTheme() {
    const root = document.documentElement;
    let theme = localStorage.getItem('theme');

    // Optional: System-Pref (nur nutzen, wenn du NICHT immer dark default willst)
    // const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

    if (!theme) {
      // Standard: dark
      theme = 'dark';
      localStorage.setItem('theme', theme);
    }

    const isDark = theme === 'dark'; // || (!theme && prefersDark);
    root.classList.toggle('dark', isDark);
    // Hilft Browser-UI (Form Controls, Scrollbars) korrekt zu stylen
    root.style.colorScheme = isDark ? 'dark' : 'light';
  })();

  // Toggle-Funktion: persistiert und setzt NUR 'dark'-Klasse
  function toggleDarkLightMode(isInit) {
    if (isInit) return; // Init passiert oben, hier nichts tun

    const root = document.documentElement;
    const current = localStorage.getItem('theme') || 'dark';
    const next = current === 'dark' ? 'light' : 'dark';
    localStorage.setItem('theme', next);
    root.classList.toggle('dark', next === 'dark');
    root.style.colorScheme = next === 'dark' ? 'dark' : 'light';
  }
</script>
